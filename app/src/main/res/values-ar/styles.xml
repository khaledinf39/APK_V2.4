<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/menu</item>
    </style>

    <style name="customDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="numberpad_style">
        <item name="android:background">@drawable/number_pad</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="numberpad_style_keypad">
        <item name="android:background">@drawable/number_pad</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="numberpad_style_pin">
        <item name="android:background">@drawable/number_pad_pin</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- EMV changes -->

    <style name="clearAndEnterStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/clearandenter_text_size</item>
    </style>

    <style name="header_style">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="grid_item">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Home_txtLang">
        <item name="android:layout_alignStart">@+id/grid</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Home_DevInfo">
        <item name="android:gravity">right</item>
        <item name="android:layout_toRightOf">@+id/txtLanguge</item>
        <item name="android:paddingRight">10dp</item>

    </style>

</resources>
