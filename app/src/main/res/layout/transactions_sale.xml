<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_dark"
    android:orientation="vertical" >

    <com.mpos.utils.CustomTextView
        android:id="@+id/enteramounttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="17dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:text="Enter Amount"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        custom:typeface="interstate" />

    <com.mpos.utils.CustomTextView
        android:id="@+id/enteramountedittxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enteramounttxt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn"
        android:supportsRtl="false"
        android:ems="15"
        android:gravity="left"
        android:hint="0.00"
        android:inputType="phone|text|numberDecimal"
        android:maxLength="13"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="14dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="22sp"

        custom:typeface="interstate" />

    <Button
        android:id="@+id/numberseven"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/numberfour"
        android:layout_below="@+id/numberfour"
        android:layout_marginTop="26dp"
        android:ems="3"
        android:text="7"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/clr"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/numberfour"
        android:layout_below="@+id/numberseven"
        android:layout_marginTop="26dp"
        android:ems="3"
        android:text="CLR"
        android:visibility="invisible"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/submitsale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberzero"
        android:layout_centerHorizontal="true"

        android:layout_margin="20sp"
        android:text="PROCESS"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        />

    <!--android:layout_marginLeft="20dp"-->
    <!--android:layout_marginRight="20dp"-->
    <!--android:layout_marginTop="30dp"-->
    <!--android:background="@drawable/btn"-->

    <Button
        android:id="@+id/numbertwo"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/enteramountedittxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:ems="3"
        android:text="2"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/numberfour"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/numberfive"
        android:layout_alignBottom="@+id/numberfive"
        android:layout_alignLeft="@+id/numberone"
        android:ems="3"
        android:text="4"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/numberone"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/numberfive"
        android:layout_alignLeft="@+id/enteramountedittxt"
        android:layout_marginTop="15dp"
        android:ems="3"
        android:text="1"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/numbersix"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/numberfive"
        android:layout_alignBottom="@+id/numberfive"
        android:layout_alignLeft="@+id/numberthree"
        android:layout_alignParentRight="true"
        android:ems="3"
        android:text="6"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/numberthree"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/numberfive"
        android:layout_alignRight="@+id/enteramountedittxt"
        android:ems="3"
        android:text="3"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/numberfive"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/numbertwo"
        android:layout_below="@+id/numbertwo"
        android:layout_marginTop="26dp"
        android:ems="3"
        android:text="5"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/numbereight"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/clr"
        android:layout_alignLeft="@+id/numberfive"
        android:ems="3"
        android:text="8"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/numberzero"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/clr"
        android:layout_alignBottom="@+id/clr"
        android:layout_alignLeft="@+id/numbereight"
        android:ems="3"
        android:text="0"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/numbernine"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/clr"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/numbersix"
        android:ems="3"
        android:text="9"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/lessthan"
        style="@style/numberpad_style"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/numberzero"
        android:layout_alignBottom="@+id/numberzero"
        android:layout_alignLeft="@+id/numbernine"
        android:ems="3"
        android:text="CLR"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/ruppeeimgview"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/enteramountedittxt"
        android:layout_alignLeft="@+id/enteramountedittxt"
        android:layout_marginBottom="14dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        />
    <!--android:src="@drawable/ruppee"-->
    <TextView
        android:id="@+id/transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enteramountedittxt"
        android:layout_alignRight="@+id/enteramountedittxt"
        android:layout_toRightOf="@+id/enteramounttxt"
        android:text="Sale"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green"
        android:textSize="22sp" />

</RelativeLayout>