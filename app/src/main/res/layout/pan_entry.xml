<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/pan_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/txtbox"
        android:ems="15"
        android:imeOptions="actionDone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </EditText>


    <Button
        android:id="@+id/process_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pan_edittext"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pan_edittext"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="180dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn"
        android:text="PROCESS"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <Button
        android:id="@+id/cancle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pan_edittext"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pan_edittext"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/process_btn"
        android:background="@drawable/btn"
        android:text="CANCEL"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/rrn_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pan_edittext"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:text="Masked PAN"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/input_entry_label_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="ENTER MASKED PAN"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green"
        android:textSize="28sp" />

</RelativeLayout>
