<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_search_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark" >

    <TextView
        android:id="@+id/search_device_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:padding="16dp"
        android:text="@string/search_device"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/self_service_confirm_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_device_txt"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_marginTop="14dp"
        android:gravity="right"
        android:progressDrawable="@drawable/custom_progress_bar" />

    <ImageView
        android:id="@+id/connectionsuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_device_txt"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/connected"
        android:gravity="right"
        android:visibility="gone" />

</RelativeLayout>
