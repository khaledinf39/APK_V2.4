<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80bfff"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RadioGroup

            android:id="@+id/radio_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_CR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:buttonTint="#0f0"
                android:checked="true"
                android:text="CR"
                android:textColor="#fff" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:buttonTint="#0f0"
                android:text="ID"

                android:textColor="#fff" />

            <ImageButton
                android:id="@+id/btn_ConnectBluetooth"
                android:layout_width="0dp"
                android:layout_height="75px"
                android:layout_weight=".08"
                android:background="#80bfff"
                android:src="@drawable/rsz_bluetooth" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="Enter CR \\ ID"
            android:textColor="#fff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_CR_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight=".70"
            android:background="@drawable/txtbox"
            android:ems="15"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="10"
            android:textAppearance="?android:attr/textAppearanceLarge">

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="Enter Mobile"
            android:textColor="#fff"
            android:textStyle="bold" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dp"
            android:layout_weight=".25"
            android:background="#aaaaaaaa"
            android:editable="false"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:maxLength="9"
            android:text="00966"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/enter_Mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight=".43"
            android:background="@drawable/txtbox"
            android:ems="15"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="9"
            android:textAppearance="?android:attr/textAppearanceLarge">

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="Enter TID"
            android:textColor="#fff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_TID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight=".70"
            android:background="@drawable/txtbox"
            android:ems="15"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="8"
            android:textAppearance="?android:attr/textAppearanceLarge">

            <requestFocus />
        </EditText>
    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/btn_Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_weight=".70"
            android:background="#3F51B5"
            android:text="Register"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
